border-1px($color = rgba(7,17,27,.1))
  position relative
  &:after
    display block
    content ''
    width 100%
    height 0
    line-height 0
    font-size 0
    position absolute
    left 0
    bottom 0
    border-top 1px solid $color
    @media (-webkit-min-device-pixel-ratio: 1.5),(min-device-pixel-ratio: 1.5)
      -webkit-transform scaleY(.7)
      transform scaleY(.7)
    @media (-webkit-min-devcie-pixel-ratio: 2),(min-device-pixel-ratio: 2)
      -webkit-transform scaleY(.5)
      transform scaleY(.5)
    @media (-webkit-min-devcie-pixel-ratio: 3),(min-device-pixel-ratio: 3)
      -webkit-transform scaleY(.33333)
      transform scaleY(.33333)
color-7()
  color rgb(7,17,27)
color-7a()
  color rgb(7,17,27,.1)
color-147()
  color rgb(147,153,159)
color-147a()
  color rgba(147,153,159,.1)
bg-img($url)
  background-image url($url + '@2x.png')
  @media (-webkit-device-pixel-ratio: 3),(device-pixel-ratio: 3)
    background-image url($url + '@3x.png')